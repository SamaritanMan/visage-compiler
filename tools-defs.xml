<?xml version="1.0" encoding="UTF-8"?>

<project name="JavaFX Compiler Tools Definitions" basedir=".">

    <!-- relies on ${tools.dir} being defined -->

    <property name="ant.ver" value="1.7.0"/>
    <property name="ant.dir" value="${tools.dir}/ant-${ant.ver}"/>
    
    <!-- Scenario is in openjfx-compiler repository until its development slows
    <property name="scenegraph.ver" value="Scenario-0.6"/>
    <property name="scenegraph.jar" value="${scenegraph.ver}.jar"/>
    <property name="scenegraph.dir" value="${tools.dir}/${scenegraph.ver}"/> -->
    <property name="scenegraph.ver" value="Scenario"/>
    <property name="scenegraph.jar" value="${scenegraph.ver}.jar"/>
    <property name="scenegraph.dir" value="${basedir}/lib"/>

    <property name="junit.ver" value="4.4"/>
    <property name="junit.dir" value="${tools.dir}/junit-${junit.ver}"/>

    <property name="docbook.ver" value="1.73.1"/>
    <property name="docbook.dir" value="${tools.dir}/docbook-xsl-${docbook.ver}"/>

    <property name="wysiwygdocbook.ver" value="1.02"/>
    <property name="wysiwygdocbook.reldir" value="wysiwygdocbook-${wysiwygdocbook.ver}"/>
    <property name="wysiwygdocbook.dir" value="${tools.dir}/${wysiwygdocbook.reldir}"/>

    <property name="findbugs.ver" value="1.3.3"/>
    <property name="findbugs.dir" value="${tools.dir}/findbugs-${findbugs.ver}"/>

    <property name="saxon.ver" value="6.5.5"/>
    <property name="saxon.dir" value="${tools.dir}/saxon-${saxon.ver}"/>

    <property name="xincluder.ver" value="1.0d11"/>
    <property name="xincluder.dir" value="${tools.dir}/xincluder-${xincluder.ver}"/>

    <property name="antlr.ver" value="3.1b1"/>
    <property name="antlr.dir" value="${tools.dir}/antlr-${antlr.ver}"/>

    <property name="antlrworks.ver" value="1.1.4"/>
    <property name="antlrworks.dir" value="${tools.dir}/antlrworks-${antlrworks.ver}"/>

    <property name="cobertura.ver" value="1.9" />
    <property name="cobertura.dir" value="${tools.dir}/cobertura-${cobertura.ver}" />

    <property name="svnstat.ver" value="1.0" />
    <property name="svnstat.dir" value="${tools.dir}/svnstat-${svnstat.ver}" />

    <path id="ant.class.path">
        <fileset dir="${ant.dir}" includes="**/*.jar" />
    </path>

    <path id="scenegraph.class.path">
        <!-- <fileset dir="${scenegraph.dir}" includes="**/*.jar" /> -->
        <fileset file="${scenegraph.dir}/${scenegraph.jar}"/>
    </path>

    <path id="junit.class.path">
        <fileset dir="${junit.dir}" includes="**/*.jar" />
    </path>

    <path id="findbugs.class.path">
        <fileset dir="${findbugs.dir}" includes="**/*.jar" />
    </path>

    <path id="saxon.class.path">
        <fileset dir="${saxon.dir}" includes="**/*.jar" />
    </path>

    <path id="xincluder.class.path">
        <fileset dir="${xincluder.dir}" includes="**/*.jar" />
    </path>

    <path id="antlr.class.path">
        <fileset dir="${antlr.dir}" includes="**/*.jar" />
    </path>

    <path id="antlr-runtime.class.path">
        <fileset dir="${antlr.dir}" includes="**/antlr-runtime-${antlr.ver}.jar" />
    </path>

    <path id="antlrworks.class.path">
        <fileset dir="${antlrworks.dir}" includes="**/*.jar" />
    </path>

    <path id="cobertura.class.path">
        <fileset dir="${cobertura.dir}" includes="**/*.jar" />
    </path>

    <path id="svnstat.class.path">
        <fileset dir="${svnstat.dir}" includes="**/*.jar" />
    </path>

</project>
