#!/bin/sh
#
# JavaFX Script execution script for Linux/Solaris/OS X.
#
# Uses the same arguments as the JDK's java command.
#

# resolve symlinks
PRG=$0
while [ -h "$PRG" ]; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '^.*-> \(.*\)$' 2>/dev/null`
    if expr "$link" : '^/' 2> /dev/null >/dev/null; then
	PRG="$link"
    else
	PRG="`dirname "$PRG"`/$link"
    fi
done

HOME=`dirname "$PRG"`/../lib

case "`uname`" in
  Darwin*) if [ -z "$JAVA_HOME" ] ; then
              JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home
           fi
           ;;
esac

if [ -n "$JAVA_HOME"  ] ; then
    JAVA_CMD="$JAVA_HOME/bin/java"
else
  JAVA_CMD=`which java 2> /dev/null `
  if [ -z "$JAVA_CMD" ] ; then
      JAVA_CMD=java
  fi
fi

if [ ! -x "$JAVA_CMD" ] ; then
  echo 'Error: JAVA_HOME is not defined, cannot find "java" command.'
  exit 1
fi

if [ -z "$CLASSPATH" ] ; then
  USER_CP="."
else
  USER_CP="$CLASSPATH"
fi 
classpath="$HOME/javafxrt.jar:$HOME/@SCENEGRAPH_JAR@:$USER_CP"

args=""
jargs=""
parse_args() {
while [ $# -gt 0 ] ; do
    case "$1" in
        -J*) jopt=`expr "X-$1" : 'X--J\(.*\)'`; jargs="$jargs '$jopt'";;
        -cp | -classpath) shift; classpath="$classpath:$1";;
        *) args="$args $1";;
    esac
    shift
done
} 

parse_args "$@" # process arguments on the command line
$JAVA_CMD $jargs -Xbootclasspath/p:$HOME/javafxc.jar -classpath $classpath $args

