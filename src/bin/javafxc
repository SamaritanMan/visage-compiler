#!/bin/sh
#
# JavaFX Script compiler script for Linux/Solaris/OS X.
#
# Uses the same arguments as the JDK's javac command.
#

# resolve symlinks
PRG=$0
while [ -h "$PRG" ]; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '^.*-> \(.*\)$' 2>/dev/null`
    if expr "$link" : '^/' 2> /dev/null >/dev/null; then
    PRG="$link"
    else
    PRG="`dirname "$PRG"`/$link"
    fi
done

# detect Darwin and Cygwin environments
darwin=false;
cygwin=false;
case "`uname`" in
  Darwin*) darwin=true;
           if [ -z "$JAVA_HOME" ] ; then
              JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home
           fi
           ;;
  CYGWIN*) cygwin=true;;
esac

if [ -n "$JAVA_HOME"  ] ; then
    JAVA_CMD="$JAVA_HOME/bin/java"
else
  JAVA_CMD=`which java 2> /dev/null `
  if [ -z "$JAVA_CMD" ] ; then
      JAVA_CMD=java
  fi
fi

if [ ! -x "$JAVA_CMD" ] ; then
  echo 'Error: JAVA_HOME is not defined, cannot find "java" command.'
  exit 1
fi

if [ -z "$CLASSPATH" ] ; then
  USER_CP="."
else
  USER_CP="$CLASSPATH"
fi 

classpath="$USER_CP"
args=""
jargs=""
profile="desktop"

parse_args() {
while [ $# -gt 0 ] ; do
    case "$1" in
        -J*) jopt=`expr "X-$1" : 'X--J\(.*\)'`; jargs="$jargs \"$jopt\"";;
        -cp | -classpath) shift; classpath="$classpath:$1";;
    -profile) shift; profile="$1";;
        *) args="$args \"$1\"";;
    esac
    shift
done
} 

if [ $# -eq 0 ] ; then
    args="-help"
fi

parse_args "$@" # process arguments on the command line

javafx_home=`dirname "$PRG"`/..

if [ -f "${javafx_home}/profiles/${profile}.properties" ]; then
    eval `cat "${javafx_home}/profiles/${profile}.properties" | tr ";" ":" | grep -v "^#" | sed "s/^(.*)$/$1;/"`
else
    echo "The profile '${profile}' is not supported. Use one of these:"
    ls ${javafx_home}/profiles | sed "s/\.properties//"
    exit 1
fi

# Under Cygwin, convert certain environment variables back to Windows format
if $cygwin ; then
  classpath=`cygpath --path --windows "$classpath"`
  compile_classpath=`cygpath --path --windows "$compile_classpath"`
  JAVA_CMD=`cygpath --unix "$JAVA_CMD"`
fi

if [ -n "${compile_bootclasspath}" ]; then
    if $cygwin ; then
        compile_bootclasspath=`cygpath --path --windows "$compile_bootclasspath"`
    fi
    jargs="$jargs \"-Xbootclasspath:${compile_bootclasspath}\""
fi
if [ -n "${compile_bootclasspath_prepend}" ]; then
    if $cygwin ; then
        compile_bootclasspath_prepend=`cygpath --path --windows "$compile_bootclasspath_prepend"`
    fi
    jargs="$jargs \"-Xbootclasspath/p:${compile_bootclasspath_prepend}\""
fi
if [ -n "${compile_bootclasspath_append}" ]; then
    if $cygwin ; then
        compile_bootclasspath_append=`cygpath --path --windows "$compile_bootclasspath_append"`
    fi
    jargs="$jargs \"-Xbootclasspath/a:${compile_bootclasspath_append}\""
fi
if [ -n "${compile_nativelibpath}" ]; then
    if $cygwin ; then
        compile_nativelibpath=`cygpath --path --windows "$compile_nativelibpath"`
    fi
    jargs="$jargs \"-Djava.library.path=${compile_nativelibpath}\""
fi
jargs="$jargs com.sun.tools.javafx.Main -classpath '"$classpath:$compile_classpath"'"
if [ -n "$args" ]; then
    jargs="$jargs $args"
fi

eval '"$JAVA_CMD"' "$jargs"
