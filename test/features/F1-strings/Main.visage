/* Feature test #1 -- simple string manipulation
 * Tests integer and string expressions, module-level variable declaration, initialization and reassignment
 *       System.out.println, string literals with interpolation
 * @test
 * @run
 */

import java.lang.*;

var x : Integer = 17;
var y : Integer = 2;
var h : String = "Hello ";
var w : String = "world";

y = y + 1;

System.out.println("Hello world");
System.out.println("{h}{w}");
System.out.println(x);
System.out.println(y);
System.out.println(x+y);
System.out.println("{x} + {y} is {x+y}");
